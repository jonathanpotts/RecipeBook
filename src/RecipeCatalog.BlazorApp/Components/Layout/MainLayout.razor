@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://github.com/jonathanpotts/RecipeCatalog" target="_blank">
                <i class="bi bi-github" aria-label="GitHub Repository"></i>
            </a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss btn btn-close" role="button">
        <span class="visually-hidden">Close</span>
    </a>
</div>
